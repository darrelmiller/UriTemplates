<Project Sdk="Microsoft.Net.SDK">
  
  <PropertyGroup>
    <Description>URI Template resolution library - Implementation of RFC 6570</Description>
    
    <AssemblyTitle>Tavis.UriTemplates</AssemblyTitle>
    <NeutralLanguage>en-US</NeutralLanguage>
    <VersionPrefix>2.0.0</VersionPrefix>
    <Authors>Darrel Miller</Authors>
    <TargetFrameworks>net35;netstandard1.0;netcoreapp2.1</TargetFrameworks>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DebugType>portable</DebugType>
    <RootNamespace>Tavis.UriTemplates</RootNamespace>
    <AssemblyName>Tavis.UriTemplates</AssemblyName>
    <PackageId>Tavis.UriTemplates</PackageId>
    <PackageTags>https</PackageTags>
    <PackageReleaseNotes><![CDATA[
            For full release notes see https://github.com/tavis-software/Tavis.UriTemplates/blob/master/ReleaseNotes.md
            ]]></PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/tavis-software/Tavis.UriTemplates</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/tavis-software/Tavis.UriTemplates.git</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup>
    <Features>IOperation</Features>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net35'">
      <FrameworkPathOverride>$(MSBuildProgramFiles32)\Reference Assemblies\Microsoft\Framework\.NETFramework\v3.5\Profile\Client</FrameworkPathOverride>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.0' ">
    <PackageReference Include="System.ComponentModel.TypeConverter" Version="4.3.0" />
  </ItemGroup>

</Project>
